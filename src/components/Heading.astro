---
const { number, heading, subheading } = Astro.props;
---

<div class="flex col-span-12 relative gap-5 items-start">
  <div class="font-wide text-sm absolute -left-10 top-4">
    {number}
  </div>
  <h2 class="font-condensed uppercase text-6xl mb-0 leading-none">
    {heading}
  </h2>
  <div class="border-b-2 border-black flex-1 relative top-6"></div>
</div>
<div class="col-span-12 mb-5">
  <h3 class="font-sans font-medium text-base">{subheading}</h3>
</div>
